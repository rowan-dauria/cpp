# ===================================================================
# General .gitignore for C++ on macOS
# ===================================================================

# -------------------------------------------------------------------
# macOS Specific
# -------------------------------------------------------------------
# General icon/metadata files
.DS_Store
.AppleDouble
.LSOverride

# External hard drive/network share metadata
._*
.Spotlight-V100
.Trashes

# macOS Debug Symbols. This is a big one for C++.
*.dSYM/


# -------------------------------------------------------------------
# IDE & Editor Specific
# -------------------------------------------------------------------

# Xcode
#
# User-specific settings
*.xcodeproj/project.xcworkspace/
*.xcodeproj/xcuserdata/
*.xcworkspace/xcuserdata/
# Build folder
build/
DerivedData/
# Other
*.xccheckout
*.moved-aside
*.xcarchive

# VS Code
#
# Ignore all, then whitelist files that *should* be shared
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json
!.vscode/c_cpp_properties.json
# Local database
.vscode/*.db

# CLion / JetBrains
#
.idea/
# Default build directories
cmake-build-debug/
cmake-build-release/
cmake-build-*/


# -------------------------------------------------------------------
# C++ Build Artifacts & Binaries
# -------------------------------------------------------------------

# Common build directories
build/
bin/
lib/
out/

# CMake files
CMakeCache.txt
CMakeFiles/
cmake_install.cmake
CMakeUserPresets.json
install_manifest.txt

# Makefiles (if generated by CMake)
Makefile
*.make

# Ninja build files
.ninja_deps
.ninja_log

# Compiled code
*.o          # Object files
*.a          # Static libraries
*.so         # Shared libraries (Linux)
*.dylib      # Shared libraries (macOS)
*.dll        # Shared libraries (Windows)

# Default executable names
a.out
*.exe
*.app/


# -------------------------------------------------------------------
# Testing & Profiling
# -------------------------------------------------------------------
# Gcov (code coverage)
*.gcno
*.gcda
*.gcov

# LLVM profiler
*.profdata
*.profraw


# -------------------------------------------------------------------
# Common Extras
# -------------------------------------------------------------------
*.log
*.tmp
*.swp
*~